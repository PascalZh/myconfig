[user]
  name = PascalZh
  email = 1315521905@qq.com
[core]
  editor = nvim
  quotepath = false
  autocrlf = input
  pager = delta
[alias]
  lslog = log --graph --oneline --decorate
[credential]
  helper = store
[init]
  defaultBranch = main
[interactive]
  diffFilter = delta --color-only --features=interactive
[delta]
  navigate = true  # use n and N to move between diff sections
  side-by-side = true
  line-numbers = true
  syntax-theme = Solarized (dark)
[merge]
  conflictstyle = diff3
[diff]
  colorMoved = default
